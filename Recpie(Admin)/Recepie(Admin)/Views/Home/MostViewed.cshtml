@model IEnumerable<Recepie_Admin_.Models.Recipe>

<div class="container mt-4">
    <h2 class="text-center mb-4">Most Viewed Recipes</h2>

    <div class="container mt-4">
        <h2 class="text-center mb-4">All Recipes</h2>

        <div class="table-responsive shadow-sm p-3 bg-white rounded">
            <table class="table table-striped table-bordered align-middle text-center">
                <thead class="table-primary">
                    <tr>
                        <th>Image</th>
                        <th>Title</th>
                        <th>Views</th>
                        <th>Actions</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <img src="@item.Image" alt="@item.Title"
                                     style="width: 100px; height: 70px; object-fit: cover; border-radius: 5px;" />
                            </td>
                            <td>@item.Title</td>
                            <td>@item.ViewCount</td>
                            <td>
                                <a asp-controller="Home" asp-action="ViewDetails" asp-route-id="@item.Id"
                                   class="btn btn-primary btn-sm">View</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

