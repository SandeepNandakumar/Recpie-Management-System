@model Recepie_Admin_.Models.Recipe

@{
    ViewData["Title"] = "Recipe Details";
}

<!-- Fullscreen center container -->
<div style="display:flex; justify-content:center; align-items:center; min-height:100vh; background-color:#f8f9fa;">
    <div class="card shadow-lg rounded-4" style="max-width:600px; width:100%;">
        <!-- Recipe Image -->
        <img src="@Model.Image"
             class="card-img-top rounded-top-4"
             alt="@Model.Title"
             style="height:300px; object-fit:cover;">

        <!-- Card Body -->
        <div class="card-body p-4">
            <h3 class="card-title text-center mb-4">@Model.Title</h3>
            <div class="mt-3">
                <strong>👨‍🍳 Author:</strong>
                @if (Model.User != null)
                {
                    <a href="@Url.Action("UserProfile", "Home", new { id = Model.User.Id })"
                       class="text-decoration-none text-primary fw-semibold">
                        @Model.User.Username
                    </a>
                }
                else
                {
                    <span class="text-muted">Unknown</span>
                }
            </div>



            <div class="mb-3">
                <h5 class="fw-semibold">Ingredients</h5>
                <p class="text-secondary">@Model.Ingredients</p>
            </div>

            <div class="mb-3">
                <h5 class="fw-semibold">Steps</h5>
                <p class="text-secondary">@Model.Steps</p>
            </div>

            <div class="d-flex justify-content-between mt-4">
                <span><strong>⏱ Time:</strong> @Model.PreparationTime mins</span>
                <span><strong>⚙️ Difficulty:</strong> @Model.Difficulty</span>
            </div>

            <div class="d-flex justify-content-between align-items-center mt-4">
                <a href="@Url.Action("ListingPage", "Home")" class="btn btn-secondary">Back</a>
            </div>
        </div>
    </div>
</div>
