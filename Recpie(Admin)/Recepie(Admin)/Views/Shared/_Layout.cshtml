<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Recepie_Admin_</title>

    <!-- ✅ Bootstrap 5.3.3 CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Your site styles -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Recepie_Admin_.styles.css" asp-append-version="true" />

    <style>
        /* 🌟 Navbar Styling */
        .navbar {
            background: linear-gradient(90deg, #0078D7 0%, #005bb5 100%);
            padding: 0.75rem 1.5rem;
            box-shadow: 0 3px 10px rgba(0, 0, 0, 0.15);
        }

        .navbar-brand {
            font-weight: 700;
            font-size: 1.5rem;
            color: #fff !important;
            letter-spacing: 0.5px;
            margin-right: auto;
        }

        .navbar-nav {
            margin-left: auto;
        }

            .navbar-nav .nav-link {
                color: #fff !important;
                font-weight: 500;
                transition: all 0.3s ease;
                margin-left: 10px;
                border-radius: 6px;
                padding: 8px 14px;
            }

                .navbar-nav .nav-link:hover,
                .navbar-nav .nav-link.active {
                    background-color: rgba(255, 255, 255, 0.15);
                }

        .container {
            background-color: #ffffff;
            padding: 30px;
            border-radius: 12px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
            margin-top: 30px;
        }

        footer {
            background-color: #f1f5f9;
            padding: 15px 0;
            text-align: center;
            color: #555;
            font-size: 0.95rem;
            margin-top: 40px;
            border-top: 1px solid #ddd;
        }

        .btn-custom {
            background-color: #0078D7;
            color: #fff;
            border-radius: 6px;
            transition: 0.3s;
        }

            .btn-custom:hover {
                background-color: #005bb5;
            }
    </style>
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Recepie</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar"
                        aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNavbar">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link active" asp-area="" asp-controller="Home" asp-action="ListingPage">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="UserList">UserList</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="MostViewed">Most viewed</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Logout">Logout</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer>
        &copy; 2025 - Recepie Admin Panel - All Rights Reserved
    </footer>

    <!-- ✅ Bootstrap 5 JS Bundle CDN -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Optional site scripts -->
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
